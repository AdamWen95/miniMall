/* components/tab-control/tab-control.wxss */
.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding-bottom: 5rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.active {
  color: #ff5777;
}

.active text {
  border-bottom: 6rpx solid #ff5777;
  padding: 14rpx 16rpx;
}